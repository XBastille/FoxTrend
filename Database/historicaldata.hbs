    <script>


        Papa.parse("/public/stock_data_1.csv", {
            download: true,
            skipEmptyLines: true,
            //Draw from csv file
            complete: (csv) => {
                var table = document.getElementById("demo");
                table.innerHTML = "";

                for (let row of csv.data) {
                    let tr = table.insertRow();
                    for (let cell of row) {
                        let td = tr.insertCell();
                        td.innerHTML = cell;
                    }
                }
            },
        });

